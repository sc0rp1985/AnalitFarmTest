<UserControl x:Class="Cassa.Wpf.Frames.Check"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cassa.Wpf.Frames"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <local:CheckDetailList Grid.Row="0"/>
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="BlueViolet">
            <local:CheckDetailInfo DataContext="{Binding SelectedDetItem}"/>
        </Border>
    </Grid>
</UserControl>
